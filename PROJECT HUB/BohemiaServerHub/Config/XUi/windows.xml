<config>
    <!-- Remove the original Creative button -->
    <remove xpath="/windows/window[@name='windowPagingHeader']/button[@name='Creative']" />

    <!-- Bohemia Hub button - Green B letter -->
    <append xpath="/windows/window[@name='windowPagingHeader']">
        <button pos="576,-21" name="BohemiaHub" 
                sprite="ui_game_filled_circle"
                tooltip="Bohemia Server Hub"
                style="press, hover, paging.window.icon">
            <label pos="0,0" font_size="20" text="B" 
                   color="0,255,0"
                   justify="center" pivot="center" 
                   depth="2"
                   effect="outline" effect_distance="1,1" effect_color="0,0,0,255" />
        </button>
    </append>

    <!-- MAIN HUB WINDOW -->
    <append xpath="/windows">
        <window name="BohemiaHub" 
                anchor="CenterCenter" pos="0,0" width="480" height="350"
                panel="Center">
            
            <panel style="header.panel">
                <sprite style="header.icon" sprite="ui_game_symbol_misc"/>
                <label style="header.name" text="" />
            </panel>

            <panel name="content" depth="0" pos="0,46" height="304" disableautobackground="true">
                <sprite depth="1" name="background" sprite="menu_empty" color="[darkGrey]" type="sliced" />
                
                <!-- Title Section -->
                <rect pos="240,-25" width="480" height="50">
                    <label text="**Bohemia Server HUB**" pos="0,0" 
                           font_size="28" color="255,215,0" 
                           justify="center" pivot="center" 
                           effect="outline" effect_distance="2,2" />
                </rect>

                <!-- Button Container -->
                <rect depth="2" pos="40,-80" width="400" height="200">
                    
                    <!-- How To Vote Button with Tooltip -->
                    <rect name="btnHowToVote" depth="3" pos="0,0" width="400" height="32">
                        <sprite depth="1" name="background" sprite="menu_empty" 
                                color="100,100,100,150" type="sliced" />
                        <button name="BohemiaHubVote" depth="2" pos="200,-16" width="400" height="32" 
                                sprite="menu_empty" 
                                defaultcolor="150,150,150,180" 
                                hovercolor="200,200,200,220" 
                                type="sliced" 
                                style="press, hover"
                                sound="[default_click]"
                                pivot="center"
                                tooltip="VOTE FOR REWARDS!\n\nYou can vote once per 24hrs. Command /vote will give link/rewards/info about time until next vote.\n\nOption 1: In game server list, choose server and click on URL link (server description),\nlogin with your STEAM account and vote!\nThis function requires STEAM overlay to be enabled.\n\nOption 2: Open your browser with URL https://7daystodie-servers.com/\nSearch for Bohemian, click VOTE button.\n\nReturn to game, don't forget to use /vote command to claim goodies!" />
                        <label depth="3" text="HOW TO VOTE" 
                               pos="200,-16" justify="center" pivot="center" 
                               font_size="14" color="0,255,0" 
                               effect="outline" upper_case="true" />
                    </rect>

                    <!-- Server Shop Button with Tooltip -->
                    <rect name="btnServerShop" depth="3" pos="0,-40" width="400" height="32">
                        <sprite depth="1" name="background" sprite="menu_empty" 
                                color="100,100,100,150" type="sliced" />
                        <button name="BohemiaHubShop" depth="2" pos="200,-16" width="400" height="32" 
                                sprite="menu_empty" 
                                defaultcolor="150,150,150,180" 
                                hovercolor="200,200,200,220" 
                                type="sliced" 
                                style="press, hover"
                                sound="[default_click]"
                                pivot="center"
                                tooltip="SERVER SHOP\n\nYou can trade stuff from Brewery for beers :D\n\nOption 1: Console commands:\n/balance - how many Beers you have.\n/shop - information how to trade via this command.\n\nOption 2: Use /link command - Write the URL link sent to you to register new account on Takaro.\nUse graphical interface of shop for convenient trading!\n\nReturn to game anytime and use /claim to receive goods." />
                        <label depth="3" text="SERVER SHOP" 
                               pos="200,-16" justify="center" pivot="center" 
                               font_size="14" color="0,255,0" 
                               effect="outline" upper_case="true" />
                    </rect>

                    <!-- Daily Quests Button with Tooltip -->
                    <rect name="btnPlayerStats" depth="3" pos="0,-80" width="400" height="32">
                        <sprite depth="1" name="background" sprite="menu_empty" 
                                color="100,100,100,150" type="sliced" />
                        <button name="BohemiaHubStats" depth="2" pos="200,-16" width="400" height="32" 
                                sprite="menu_empty" 
                                defaultcolor="150,150,150,180" 
                                hovercolor="200,200,200,220" 
                                type="sliced" 
                                style="press, hover"
                                sound="[default_click]"
                                pivot="center"
                                tooltip="DAILY QUESTS\n\n**Work in progress**\n\nComplete daily challenges for rewards!\nCheck server announcements!.\n\nConsole commands:\n/daily - information about quest and completion.\n/dailyclaim - collecting rewards for finished daily quest!\n/initquests - Start new daily quests!\n\nCurrently there are 5 quests:\nTIME SURVIVOR - Spend 1hour ingame for 25beers\nSERVER SUPPORTER - Vote once per day for 50beers\nZOMBIE HUNTER - Kill 200 zombies for 25beers\nEXPERIENCE GRINDER - Level up 5x for 25beers\nTRADE BEERS - Buy and item from shop for 25beers" />
                        <label depth="3" text="DAILY QUESTS" 
                               pos="200,-16" justify="center" pivot="center" 
                               font_size="14" color="0,255,0" 
                               effect="outline" upper_case="true" />
                    </rect>

                    <!-- Achievements Button with Tooltip -->
                    <rect name="btnDailyQuests" depth="3" pos="0,-120" width="400" height="32">
                        <sprite depth="1" name="background" sprite="menu_empty" 
                                color="100,100,100,150" type="sliced" />
                        <button name="BohemiaHubQuests" depth="2" pos="200,-16" width="400" height="32" 
                                sprite="menu_empty" 
                                defaultcolor="150,150,150,180" 
                                hovercolor="200,200,200,220" 
                                type="sliced" 
                                style="press, hover"
                                sound="[default_click]"
                                pivot="center"
                                tooltip="ACHIEVEMENTS\n\nSmash some Zombies: Kill 100 total\nZombie Hunter: Kill 1000 zombies total\nMastercleaner: Smash 5000 zombies in total\nApocalypse survivor: 10000 zombie kills!\n\nRewards are automatically granted by Takaro system\nwhen you reach each milestone!\n\nYou can use /zombies command to check your progress." />
                        <label depth="3" text="ACHIEVEMENTS" 
                               pos="200,-16" justify="center" pivot="center" 
                               font_size="14" color="0,255,0" 
                               effect="outline" upper_case="true" />
                    </rect>
                
                <!-- Catchup system Button with Tooltip -->
                    <rect name="btnPlayerStats" depth="3" pos="0,-160" width="400" height="32">
                        <sprite depth="1" name="background" sprite="menu_empty" 
                                color="100,100,100,150" type="sliced" />
                        <button name="BohemiaHubCatchup" depth="2" pos="200,-16" width="400" height="32" 
                                sprite="menu_empty" 
                                defaultcolor="150,150,150,180" 
                                hovercolor="200,200,200,220" 
                                type="sliced" 
                                style="press, hover"
                                sound="[default_click]"
                                pivot="center"
                                tooltip="CATCHUP SYSTEM\n\nWhen you are level 1 and there is player above level 100 on the server, you can use catchup system!\n\nType /catchup command and receive lvl boost according to highest level on server!" />
                        <label depth="3" text="CATCHUP SYSTEM" 
                               pos="200,-16" justify="center" pivot="center" 
                               font_size="14" color="0,255,0" 
                               effect="outline" upper_case="true" />
                    </rect>
                </rect>
            </panel>
        </window>
    </append>

</config>